@page
@model CS451_Team_Project.Pages.TipsModel
@{
    Layout = Layout;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tips</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.0.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom.css">
    <link rel="stylesheet" href="~/css/tips.css">
</head>

<body>
    <style>
        .charts_container {
            margin-top: 3rem;
        }
    </style>
    <section class="charts_container">

        <div class="container">

            <div class="card-group">

                <div class="col-md-7 col-lg-6">
                    <div class="col">
                        <a class="card pie_chart" asp-page="BudgetTracker" asp-route-token="@Model.token" asp-route-email="@Model.email">
                            <div class="card-body">
                                <h5 class="card-title">Budget Ratio</h5>
                                <p class="card-text">50% needs/30% wants/20% savings</p>
                                <canvas class="pie_canvas" id="staticRatioPieChart"></canvas>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-md-5 col-lg-6">
                    <div class="col">
                        <a class="card pie_chart" asp-page="BudgetTracker" asp-route-token="@Model.token" asp-route-email="@Model.email">
                            <div class="card-body">
                                <h5 class="card-title">Budget Ratio</h5>
                                <p class="card-text">Your current monthly ratio</p>
                                <style>
                                    img {
                                        padding: 0.75rem;
                                    }
                                </style>
                                <img id="pie_canvas" src="~/images/budgetChart.png" alt="Budget Chart" />
                            </div>
                        </a>
                    </div>
                </div>

                <!-- financial tips -->
                <div class="col">
                    <a class="card financial_tips" asp-page="Tips" asp-route-token="@Model.token" asp-route-email="@Model.email">

                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselFinacialTips" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>

                        <button class="carousel-control-next" type="button" data-bs-target="#carouselFinacialTips" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>


                        <div class="card-body">
                            <div class="card-title">10 Financial Tips</div>
                        </div>
                        <!-- start of where to replace the financial tips with the 10 tips on page-->
                        <div id="carouselFinacialTips" class="carousel slide">
                            <div class="carousel-inner" id="financialTipsContainer">
                                <div class="carousel-item active">
                                    <div class="financial_title">
                                        Create a Budget
                                    </div>
                                    <div class="financial_description">
                                        Establishing a budget is crucial for managing your finances effectively.
                                        Track your income and expenses to understand where your money is going.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--stop-->

                    </a>
                </div>
            </div>
        </div>
        </div>
    </section>

    <script src="~/js/toggle-colors.js"></script>
    <script src="~/js/dashboard-chart.js"></script>
    <script src="~/js/header.js"></script>
    <script src="~/js/tips.js"></script>
    <script src="~/js/static-tips.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</body>
</html>