@page
@model CS451_Team_Project.Pages.ProfileSettingsModel
@{
    Layout = Layout;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@3.0.0/fonts/remixicon.css">
    <link rel="stylesheet" href="~/css/custom.css">
    <link rel="stylesheet" href="~/css/profileSettings.css">
</head>
<body>

    <main class="main">
        <section class="profile_page">
            <div class="profile_container container">

                <!--<article class="demo_card">
                    <i class="ri-file-upload-fill demo_icon"></i>

                    <h2 class="demo_title">Upload</h2>

                    <p class="demo_description">
                        Upload your bank statements and watch as RabbitCoin
                        organizes them into easy to read charts.
                    </p>
                </article>-->

                <div class="icon_color icon_grid">
                    <article class="icon_card">
                        <div class="default">
                            <i class="ri-user-3-fill profile_icon selected_icon"></i>
                            <h2 class="icon_title">Selected</h2>
                        </div>
                    </article>
                    <article class="icon_card">
                        <div class="red">
                            <i class="ri-user-3-fill red profile_icon"></i>
                            <h2 class="icon_title">Red</h2>
                        </div>
                    </article>
                    <article class="icon_card">
                        <div class="organge">
                            <i class="ri-user-3-fill orange profile_icon"></i>
                            <h2 class="icon_title">Orange</h2>
                        </div>
                    </article>
                    <article class="icon_card">
                        <div class="yellow">
                            <i class="ri-user-3-fill yellow profile_icon"></i>
                            <h2 class="icon_title">Yellow</h2>
                        </div>
                    </article>
                    <article class="icon_card">
                        <div class="green">
                            <i class="ri-user-3-fill green profile_icon"></i>
                            <h2 class="icon_title">Green</h2>
                        </div>
                    </article>
                    <article class="icon_card">
                        <div class="blue">
                            <i class="ri-user-3-fill blue profile_icon"></i>
                            <h2 class="icon_title">Blue</h2>
                        </div>
                    </article>
                    <article class="icon_card">
                        <div class="purple">
                            <i class="ri-user-3-fill purple profile_icon"></i>
                            <h2 class="icon_title">Purple</h2>
                        </div>
                    </article>
                </div>

                <div class="user_info">
                    <div class="card-group">

                        <div class="card">
                            <!-- Basic Information -->
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Full Name</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.FirstName @Model.LastName</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Email</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.Email</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Phone</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">(012) 345-6789</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Mobile</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">(987) 654-3210</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Occupation</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">Full Stack Developer</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">City</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">Kansas City, MO</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </main>


    <script src="~/js/toggle-colors.js"></script>
    <script src="~/js/toggleColorspt2.js"></script>
    <script src="~/js/profileSettings.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

</body>

</html>

